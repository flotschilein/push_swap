NAME = push_swap
BONUS_NAME = checker
CC = cc
CFLAGS = -Wall -Wextra -Werror

SRC_DIR = src/
BONUS_DIR = src_bonus/
LIBFT_DIR = libft/
INCLUDES = -I include/ -I $(LIBFT_DIR)

SRC = $(SRC_DIR)main.c \
      $(SRC_DIR)input.c \
      $(SRC_DIR)utils.c \
	  $(SRC_DIR)sort_small.c \
      $(SRC_DIR)sort.c \
      $(SRC_DIR)swap.c \
      $(SRC_DIR)push.c \
      $(SRC_DIR)rotate.c \
      $(SRC_DIR)rev_rotate.c

BONUS_SRC = $(BONUS_DIR)main.c \
            $(BONUS_DIR)get_next_line.c \
            $(BONUS_DIR)get_next_line_utils.c

OBJ = $(SRC:.c=.o)
BONUS_OBJ = $(BONUS_SRC:.c=.o)
LIBFT = $(LIBFT_DIR)libft.a

all: $(NAME)

bonus: $(BONUS_NAME)

$(NAME): $(OBJ) $(LIBFT)
	$(CC) $(CFLAGS) $(OBJ) $(LIBFT) -o $(NAME)

$(BONUS_NAME): $(BONUS_OBJ) $(LIBFT)
	$(CC) $(CFLAGS) $(BONUS_OBJ) $(LIBFT) -o $(BONUS_NAME)

$(LIBFT):
	make -C $(LIBFT_DIR)

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	make -C $(LIBFT_DIR) clean
	rm -f $(OBJ) $(BONUS_OBJ)

fclean: clean
	make -C $(LIBFT_DIR) fclean
	rm -f $(NAME) $(BONUS_NAME)

re: fclean all

.PHONY: all bonus clean fclean re